{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "program": "${workspaceFolder}/src/server.js",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "runtimeArgs": ["--inspect=0.0.0.0:9229"],
      "port": 9229,
      "env": {
        "LOG_LEVEL": "debug"
      },
      "console": "integratedTerminal"
    }
  ]
}

